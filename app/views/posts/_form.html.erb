<div class="container mb-5">
  <%= render 'shared/errors', obj: @post %>

  <div class="row justify-content-center">
    <div class="col-md-12">
      <%= form_with model: @post, class: 'shadow bg-light rounded p-3', local: true do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: 'col-2 col-form-label' %>
        <div class="col-md-10">
          <%= f.text_field :title, autofocus: true, class: 'form-control shadow-sm rounded', placeholder: 'Post title' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description, class: 'col-2 col-form-label' %>
        <div class="col-md-10">
          <%= f.text_area :description, rows: 10, class: 'form-control shadow-sm rounded', placeholder: 'Post description' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :category, class: 'col-2 col-form-label' %>
        <div class="col-md-10">
          <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: 'Select one or more category', include_hidden: false }, { multiple: true, class: 'custom-select shadow-sm rounded' }) %>
        </div>
      </div>

      <div class="form-group row justify-content-center mb-0">
        <%= f.submit class: 'btn btn-secondary btn-lg' %>
      </div>
      <% end %>
    </div>

    <%= link_to  "Back to posts list", posts_path, class: 'btn btn-outline-dark mt-5' %>
  </div>
</div>
