<h1>Edit Post</h1>

<% if @post.errors.any? %>
<h2>The following errors prevented the post being saved.</h2>

<ul>
  <% @post.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: @post, local: true do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_area :description %>
</p>

<%= f.submit "Edit Post" %>
<% end %>

<p>
  <%= link_to  "Cancel and back to posts list", posts_path %>
</p>
