<h1>All posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= link_to  "View", post_path(post), class: 'btn btn-primary' %></td>
      <td><%= link_to  "Edit", edit_post_path(post), class: 'btn btn-info' %></td>
      <td><%= link_to  "Delete", post_path(post), class: 'btn btn-delete', method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
