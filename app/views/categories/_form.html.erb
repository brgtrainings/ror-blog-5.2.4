<div class="container">
  <%= render 'shared/errors', obj: @category %>

  <div class="row justify-content-center">
    <div class="col-md-12">
      <%= form_with model: @category, class: 'shadow bg-light rounded p-3', local: true do |f| %>
      <div class="form-group row">
        <%= f.label :name, 'Category name', class: 'col-2 col-form-label' %>
        <div class="col-md-10">
          <%= f.text_field :name, autofocus: true, class: 'form-control shadow-sm rounded', placeholder: 'Enter a category name' %>
        </div>
      </div>
      <div class="form-group row justify-content-center mb-0">
        <%= f.submit class: 'btn btn-secondary btn-lg' %>
      </div>
      <% end %>
    </div>

    <%= link_to  "Back to categories list", categories_path, class: 'btn btn-outline-dark mt-5' %>
  </div>
</div>
