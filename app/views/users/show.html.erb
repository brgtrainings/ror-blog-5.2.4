<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
  <%= link_to  "Edit profile", edit_user_path(@user), class: 'btn btn-secondary' %>
</div>

<h3 class="text-center mt-4">Posts</h3>

<div class="container mb-5">
  <% @posts.each do |post| %>
  <%= render "posts/posts", post: post %>
  <% end %>
</div>
