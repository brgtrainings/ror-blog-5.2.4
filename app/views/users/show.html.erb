<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? && @user == current_user %>
<div class="text-center mt-4">
  <%= link_to  "Edit profile", edit_user_path(@user), class: 'btn btn-secondary' %>
</div>
<% end %>

<% if @posts.count > 0 %>
  <h3 class="text-center mt-4">Posts</h3>

  <div class="flickr_pagination">
    <%= will_paginate @posts, container: false %>
  </div>

  <div class="container mb-5">
    <% @posts.each do |post| %>
    <%= render "posts/posts", post: post %>
    <% end %>
  </div>

  <div class="flickr_pagination mb-5">
    <%= will_paginate @posts, container: false %>
  </div>
<% end %>
