<div class="container">
  <%= render 'shared/errors', obj: @user %>

  <div class="row justify-content-center">
    <div class="col-md-12">
      <%= form_with model: @user, class: 'shadow bg-light rounded p-3', local: true do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: 'col-2 col-form-label' %>
        <div class="col-md-10">
          <%= f.text_field :username, autofocus: true, class: 'form-control shadow-sm rounded', placeholder: 'Enter a user name' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :first_name, class: 'col-2 col-form-label' %>
        <div class="col-md-10">
          <%= f.text_field :first_name, class: 'form-control shadow-sm rounded', placeholder: 'Enter first name' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :last_name, class: 'col-2 col-form-label' %>
        <div class="col-md-10">
          <%= f.text_field :last_name, class: 'form-control shadow-sm rounded', placeholder: 'Enter last name' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, class: 'col-2 col-form-label' %>
        <div class="col-md-10">
          <%= f.email_field :email, class: 'form-control shadow-sm rounded', placeholder: 'Enter your email address' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: 'col-2 col-form-label' %>
        <div class="col-md-10">
          <%= f.password_field :password, class: 'form-control shadow-sm rounded', placeholder: 'Enter your password' %>
        </div>
      </div>

      <div class="form-group row justify-content-center mb-0">
        <%= f.submit "Sign up", class: 'btn btn-secondary btn-lg' %>
      </div>
      <% end %>
    </div>

    <%= link_to  "Back to posts list", posts_path, class: 'btn btn-outline-dark mt-5' %>
  </div>
</div>
